<h1>Add an Image URL</h1>

<%= form_with scope: :image, url: images_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="form-group">
    <%= form.label :tag_list %>
    <%= form.text_field :tag_list, 'data-role': 'tagsinput', value: @image.tag_list.to_s %>
  </div>

  <%= form.submit %>

<% end %>

